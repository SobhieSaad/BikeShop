@model IEnumerable<BikesShop.Models.Product>

    <!-- services -->
    <div class="services">
        <div class="container">
            <div class="w3layouts-services-heading">
                <h2>Our Services</h2>
            </div>
            <div class="w3-services-grids">
                <div class="col-md-4 w3l-services-grid">
                    <a href="@Url.Action("Login","Account")">
                        <div class="w3ls-services-img">
                            <i class="fa fa-male" aria-hidden="true"></i>
                        </div>
                        <div class="agileits-services-info">
                            <h4>Sign In</h4>

                        </div>
                        </a>
                        <div>
                            <p>Sign in our website and enjoy in our Bike Online Shop<br /> You can find more features by logging on</p>
                        </div>
                </div>
                <div class="col-md-4 w3l-services-grid">
                    <a href="@Url.Action("ShowProducts","Home")">
                        <div class="w3ls-services-img">
                            <i class="fa fa-bicycle" aria-hidden="true"></i>
                        </div>
                        <div class="agileits-services-info">
                            <h4>Our Products</h4>
                            
                        </div>
                    </a>
                    <div>
                        <p>Our online shop has all Bikes equipments that you need</p>
                    </div>
                </div>
                <div class="col-md-4 w3l-services-grid">
                    <a href="@Url.Action("Register","Account")">
                        <div class="w3ls-services-img">
                            <i class="fa fa-cog" aria-hidden="true"></i>
                        </div>

                        <div class="agileits-services-info">

                            <h4>Join Us</h4>
                        </div>
                    </a>
                    <div>
                        <p>Join us and add your opinion in our products<br /> You can rate any of our product<br /> You can add comments </br > You can order it.</p>
                    </div>
                
                    
                </div>
                
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
    <!-- //services -->

    <!-- rides -->
    <div class="rides">
        <div class="container">
            <div class="w3-agileits-rides-heading">
                <h3>Top Sales</h3>
            </div>
            <div class="agileits-w3layouts-rides-grids">
                @foreach (var item in Model)
                {
                <div class="col-xs-4 rides-grid">
                    <div class="rides-grid-info">
                        <center>
                            <a href="@Url.Action("Details","Store", new { Id = item.Id })">
                                <img src="~/images/@item.ImageName" alt="" style="width:50%;height:50%" title="" />
                                <h4 style="text-align:center">@item.Name</h4>
                            </a>
                        </center>
                        @*<p>@item.Brief</p>*@
                    </div>
                </div>
                }
                <div class="clearfix"> </div>
            </div>

            <div class="w3-agileits-rides-heading">
                <h3></h3>
            </div>
            <div class="row">
                <div class="team">
                    <div class="container">
                        <div class="agileits-about-top-heading">
                            <h3>Our Testimonials</h3>
                        </div>
                        <div class="team-grids">
                            <div class="row">
                                <div class="col-xs-2 team-grid"></div>

                                <div class="col-xs-8 team-grid">
                                    <div class="ih-item circle effect10 bottom_to_top">
                                        <div class="img"><img src="~/images/t4.jpg" alt="img" ></div>
                                        <div class="info">
                                            <h3>Sobhie Saad</h3>
                                            <div class="icons">
                                                <ul>
                                                    <li><a href="https://www.facebook.com/sobhie.saad1" target="_blank"><i class="fa fa-facebook"></i></a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="wthree-top-grid">
                                        <h4 style="text-align:center">Sobhie Saad</h4>

                                    </div>
                                </div>
                                <div class="col-xs-2 team-grid"></div>
                            </div>
                            <div class="row">
                                <div class="col-xs-9 team-grid"></div>
                                <div class="col-xs-2 team-grid">
                                    <button onclick="topFunction()" id="myBtn" title="Go to top" class="btn btn-success">Go to top</button>
                                </div>
                               
                            </div>
                            <script>
                                window.onscroll = function () { scrollFunction() };

                                function scrollFunction() {
                                    if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                                        document.getElementById("myBtn").style.display = "block";
                                    } else {
                                        document.getElementById("myBtn").style.display = "none";
                                    }
                                }

                                // When the user clicks on the button, scroll to the top of the document
                                function topFunction() {
                                    document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
                                    document.body.scrollTop = 0; // For Safari
                                    
                                }
                            </script>
                        </div>
                    </div>
                </div>
            </div>
            </div>
    </div>
    <!-- //rides -->
